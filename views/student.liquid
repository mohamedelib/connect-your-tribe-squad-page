{% render 'partials/head.liquid', title: person.name %}

<p><a href="/" class="back">&lt; Terug</a></p>

<div class="Card">
  <img
    class="avatar"
    src="{% if person.mugshot %}https://fdnd.directus.app/assets/{{ person.mugshot }}{% else %}/images/prop.jpg{% endif %}"
    alt="{{ person.name }}"
    width="300"
  >
  <h2>{{ person.name }}</h2>
  <p class="squad">squad{{ person.squad }}</p>

  <div class="bericht">
    <h3>Laat een bericht achter</h3>

    <textarea placeholder="Schrijf je bericht hier..."></textarea>

    <div class="row">
      <input type="text" placeholder="Naam">
      <button>Versturen</button>
    </div>
  </div>
</div>

<style>
  h1,
  h2,
  h3,
  p,
  textarea,
  input,
  placeholder {
    font-family: Inter;
    font-weight: 300;
  }
  .back {
    position: absolute;
    top: 20px;
    left: 20px;
    text-decoration: none;
    color: #64748b;
  }

  .Card {
    width: 320px;
    background: white;
    padding: 24px;
    border-radius: 16px;
    display: grid;
    gap: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }

  .Card h2 {
    margin: 0;
    text-align: center;
  }

  .squad {
    margin: 0;
    text-align: center;
    color: #64748b;
  }

  .bericht {
    margin-top: 10px;
    display: grid;
    gap: 10px;
  }

  textarea {
    height: 100px;
    padding: 12px;
    border-radius: 10px;
    border: 1px solid #e5e7eb;
  }

  .row {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 10px;
    font-family: Inter;
  }

  input {
    height: 40px;
    padding: 0 12px;
    border-radius: 10px;
    border: 1px solid #e5e7eb;
  }

  button {
    padding: 0 16px;
    border-radius: 10px;
    border: none;
    background: #81a1c6;
    cursor: pointer;
    color: white;
  }

  .avatar {
    margin: 10px auto;
  }
</style>

{% render 'partials/foot.liquid', squads: squads %}
